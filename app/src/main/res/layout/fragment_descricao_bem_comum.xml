<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobi.moop.features.reserva.DescricaoBemComumFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bem_comum_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_color_default"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_bem_comum"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/condominios_blur" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/regras_de_uso"
            android:textColor="@color/text_color_default"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/termos_bem_comum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/text_color_default"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_eu_concordo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/eu_concordo"
            android:theme="@style/BtnLogarTheme" />

    </LinearLayout>


</ScrollView>
